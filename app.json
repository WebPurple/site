{
  "name": "web-purple",
  "description": "Site of front-end community - WebPurple",
  "scripts": {
    "postdeploy": "npm build"
  },
  "env": {
    "HOST": {
      "required": true
    },
    "NPM_CONFIG_PRODUCTION": {
      "required": true
    },
    "VK_CALLBACK_URL": {
      "required": true
    },
    "FB_CALLBACK_URL": {
      "required": true
    },
    "DB_CONNECTION_URL": {
      "required": true
    },
    "FB_CLIENT_ID": {
      "required": true
    },
    "FB_CLIENT_SECRET": {
      "required": true
    },
    "FB_PAGE_ID": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [

  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
